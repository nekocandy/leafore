generator kysely {
  provider     = "prisma-kysely"
  output       = "../lib/database"
  fileName     = "types.ts"
  enumFileName = "enums.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Deeds {
  id          String        @id
  name        String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  DeedRewards DeedRewards[]
}

model DeedRewards {
  id        String   @id
  name      String
  deedId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deed Deeds @relation(fields: [deedId], references: [id])
}
